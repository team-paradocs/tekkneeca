<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- some constants -->
    <xacro:property name="PI" value="3.1415926535897931" />
    <xacro:property name="joint_damping" value="10.0" />
    <xacro:property name="joint_friction" value="0.1" />
    <xacro:property name="A1_position_limit" value="170" />
    <xacro:property name="A2_position_limit" value="120" />
    <xacro:property name="A3_position_limit" value="170" />
    <xacro:property name="A4_position_limit" value="120" />
    <xacro:property name="A5_position_limit" value="170" />
    <xacro:property name="A6_position_limit" value="120" />
    <xacro:property name="A7_position_limit" value="175" />
    <xacro:property name="A1_velocity_limit" value="98" />
    <xacro:property name="A2_velocity_limit" value="98" />
    <xacro:property name="A3_velocity_limit" value="100" />
    <xacro:property name="A4_velocity_limit" value="130" />
    <xacro:property name="A5_velocity_limit" value="140" />
    <xacro:property name="A6_velocity_limit" value="180" />
    <xacro:property name="A7_velocity_limit" value="180" />
    <xacro:property name="effort_limit" value="200" />

    <!-- includes -->
    <xacro:include filename="$(find lbr_description)/gazebo/lbr_gazebo.xacro" />
    <xacro:include filename="$(find lbr_ros2_control)/config/lbr_system_interface.xacro" />

    <!-- robot as extracted via https://github.com/syuntoku14/fusion2urdf -->
    <xacro:macro name="med7"
        params="robot_name:=^|lbr port_id:=^|30200 sim:=^|true initial_positions_file:=^|initial_positions.yaml">   

        <link name="link_0">
            <inertial>
                <origin rpy="0 0 0" xyz="-0.001896 0.0 0.076263" />
                <mass value="7.143112" />
                <inertia ixx="0.038694" ixy="0.0" ixz="-0.000686" iyy="0.039461" iyz="0.0"
                    izz="0.054387" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/visual/link_0.dae" />
                </geometry>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/collision/link_0.stl" />
                </geometry>
            </collision>
        </link>

        <joint name="A1" type="revolute">
            <origin rpy="0 0 0" xyz="0.0 0.0 0.1475" />
            <parent link="link_0" />
            <child link="link_1" />
            <axis xyz="0.0 0.0 1.0" />
            <limit effort="${effort_limit}" lower="${-A1_position_limit * PI / 180}"
                upper="${A1_position_limit * PI / 180}"
                velocity="${A1_velocity_limit * PI / 180}" />
            <dynamics damping="${joint_damping}" friction="${joint_friction}" />
        </joint>

        <link name="link_1">
            <inertial>
                <origin rpy="0 0 0" xyz="0.0 -0.034819  0.123299" />
                <mass value="3.271499" />
                <inertia ixx="0.020611" ixy="0.0" ixz="0.0" iyy="0.019667" iyz="0.00366"
                    izz="0.00729" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0.0 0.0 -0.1475" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/visual/link_1.dae" />
                </geometry>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0.0 0.0 -0.1475" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/collision/link_1.stl" />
                </geometry>
            </collision>
        </link>

        <joint name="A2" type="revolute">
            <origin rpy="0 0 0" xyz="0.0 -0.0105 0.1925" />
            <parent link="link_1" />
            <child link="link_2" />
            <axis xyz="0.0 1.0 0.0" />
            <limit effort="${effort_limit}" lower="${-A2_position_limit * PI / 180}"
                upper="${A2_position_limit * PI / 180}"
                velocity="${A2_velocity_limit * PI / 180}" />
            <dynamics damping="${joint_damping}" friction="${joint_friction}" />
        </joint>

        <link name="link_2">
            <inertial>
                <origin rpy="0 0 0" xyz="0.0 0.039793 0.086944" />
                <mass value="3.886413" />
                <inertia ixx="0.030552" ixy="0.0" ixz="0.0" iyy="0.028995" iyz="0.005676"
                    izz="0.009317" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0.0 0.0105 -0.34" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/visual/link_2.dae" />
                </geometry>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0.0 0.0105 -0.34" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/collision/link_2.stl" />
                </geometry>
            </collision>
        </link>

        <joint name="A3" type="revolute">
            <origin rpy="0 0 0" xyz="0.0 0.0105 0.2075" />
            <parent link="link_2" />
            <child link="link_3" />
            <axis xyz="0.0 0.0 1.0" />
            <limit effort="${effort_limit}" lower="${-A3_position_limit * PI / 180}"
                upper="${A3_position_limit * PI / 180}"
                velocity="${A3_velocity_limit * PI / 180}" />
            <dynamics damping="${joint_damping}" friction="${joint_friction}" />
        </joint>

        <link name="link_3">
            <inertial>
                <origin rpy="0 0 0" xyz="0.0 0.034819  0.123299" />
                <mass value="3.271499" />
                <inertia ixx="0.020611" ixy="0.0" ixz="0.0" iyy="0.019667" iyz="-0.00366"
                    izz="0.00729" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0.0 0.0 -0.5475" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/visual/link_3.dae" />
                </geometry>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0.0 0.0 -0.5475" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/collision/link_3.stl" />
                </geometry>
            </collision>
        </link>

        <joint name="A4" type="revolute">
            <origin rpy="0 0 0" xyz="0.0 0.0105 0.1925" />
            <parent link="link_3" />
            <child link="link_4" />
            <axis xyz="0.0 -1.0 0.0" />
            <limit effort="${effort_limit}" lower="${-A4_position_limit * PI / 180}"
                upper="${A4_position_limit * PI / 180}"
                velocity="${A4_velocity_limit * PI / 180}" />
            <dynamics damping="${joint_damping}" friction="${joint_friction}" />
        </joint>

        <link name="link_4">
            <inertial>
                <origin rpy="0 0 0" xyz="0.0 -0.039793  0.086944" />
                <mass value="3.886411" />
                <inertia ixx="0.030547" ixy="0.0" ixz="0.0" iyy="0.028993" iyz="-0.005676"
                    izz="0.009313" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0.0 -0.0105 -0.74" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/visual/link_4.dae" />
                </geometry>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0.0 -0.0105 -0.74" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/collision/link_4.stl" />
                </geometry>
            </collision>
        </link>

        <joint name="A5" type="revolute">
            <origin rpy="0 0 0" xyz="0.0 -0.0105 0.2075" />
            <parent link="link_4" />
            <child link="link_5" />
            <axis xyz="0.0 0.0 1.0" />
            <limit effort="${effort_limit}" lower="${-A5_position_limit * PI / 180}"
                upper="${A5_position_limit * PI / 180}"
                velocity="${A5_velocity_limit * PI / 180}" />
            <dynamics damping="${joint_damping}" friction="${joint_friction}" />
        </joint>

        <link name="link_5">
            <inertial>
                <origin rpy="0 0 0" xyz="0.0 -0.029824 0.076267" />
                <mass value="1.474048" />
                <inertia ixx="0.008179" ixy="0.0" ixz="0.0" iyy="0.006879" iyz="0.002704"
                    izz="0.003709" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0.0 0.0 -0.9475" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/visual/link_5.dae" />
                </geometry>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0.0 0.0 -0.9475" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/collision/link_5.stl" />
                </geometry>
            </collision>
        </link>

        <joint name="A6" type="revolute">
            <origin rpy="0 0 0" xyz="0.0 -0.0707 0.1925" />
            <parent link="link_5" />
            <child link="link_6" />
            <axis xyz="0.0 1.0 0.0" />
            <limit effort="${effort_limit}" lower="${-A6_position_limit * PI / 180}"
                upper="${A6_position_limit * PI / 180}"
                velocity="${A6_velocity_limit * PI / 180}" />
            <dynamics damping="${joint_damping}" friction="${joint_friction}" />
        </joint>

        <link name="link_6">
            <inertial>
                <origin rpy="0 0 0" xyz="-1.000e-06 7.102e-02 4.953e-03" />
                <mass value="2.316911" />
                <inertia ixx="0.006813" ixy="0.0" ixz="0.0" iyy="0.006559" iyz="0.0003"
                    izz="0.004462" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0.0 0.0707 -1.14" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/visual/link_6.dae" />
                </geometry>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0.0 0.0707 -1.14" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/collision/link_6.stl" />
                </geometry>
            </collision>
        </link>

        <joint name="A7" type="revolute">
            <origin rpy="0 0 0" xyz="0.0 0.0707 0.091" />
            <parent link="link_6" />
            <child link="link_7" />
            <axis xyz="0.0 0.0 1.0" />
            <limit effort="${effort_limit}" lower="${-A7_position_limit * PI / 180}"
                upper="${A7_position_limit * PI / 180}"
                velocity="${A7_velocity_limit * PI / 180}" />
            <dynamics damping="${joint_damping}" friction="${joint_friction}" />
        </joint>

        <link name="link_7">
            <inertial>
                <origin rpy="0 0 0" xyz="3.0000e-06 -2.0000e-06 1.3782e-02" />
                <mass value="0.250108" />
                <inertia ixx="0.000165" ixy="0.0" ixz="0.0" iyy="0.000165" iyz="0.0" izz="0.000288" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0.0 0.0 -1.231" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/visual/link_7.dae" />
                </geometry>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0.0 0.0 -1.231" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/collision/link_7.stl" />
                </geometry>
            </collision>
        </link>

        <joint name="joint_ee" type="fixed">
            <parent link="link_7" />
            <child link="link_ee" />
            <origin xyz="0 0 0.035" rpy="0 0 0" />
        </joint>

        <link name="link_ee">
            <inertial>
                <origin rpy="0 0 0" xyz="0.0 -0.029824 0.076267" />
                <mass value="1.474048" />
                <inertia ixx="0.008179" ixy="0.0" ixz="0.0" iyy="0.006879" iyz="0.002704" izz="0.003709" />
            </inertial>

            <visual>
                <origin rpy="0 0 3.1415926" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://lbr_description/meshes/med7/visual/link_ee.stl" scale="0.001 0.001 0.001" />
                </geometry>
                <material name="gray">
                    <color rgba="0.5 0.5 0.5 1.0" />
                </material>
            </visual>

            <!-- round 219 mm to 220 mm, shift half of the cylinder to move the collision box-->
            <collision>
                <origin rpy="0 0 0" xyz="0.0 0.0 0.11" />
                <geometry>
                    <cylinder length="0.22" radius="0.04" />
                </geometry>
            </collision>
        </link>

        <!-- 219 mm, from link_ee frame to the end of end-effector + 9.5 mm, the chuck part that sticks out -->
        <joint name="joint_drillbit" type="fixed">
            <parent link="link_ee" />
            <child link="link_drillbit" />
            <origin xyz="0 0 0.2285" rpy="0 0 0" />
        </joint>

        <!-- 2.8 mm drill is broken, we are using 3.2 mm drill now-->
        <link name="link_drillbit">
            <inertial>
                <origin rpy="0 0 0" xyz="0.0 -0.029824 0.076267" />
                <mass value="1.474048" />
                <inertia ixx="0.008179" ixy="0.0" ixz="0.0" iyy="0.006879" iyz="0.002704" izz="0.003709" />
            </inertial>
            <visual>
                <!-- shift half of the cylinder length-->
                <origin rpy="0 0 0" xyz="0.0 0.0 0.0165" />
                <geometry>
                    <cylinder length="0.031" radius="0.0032" />
                </geometry>
                <material name="gray">
                    <color rgba="0.5 0.5 0.5 1.0" />
                </material>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0.0 0.0 0.0165" />
                <geometry>
                    <cylinder length="0.031" radius="0.0032" />
                </geometry>
            </collision>
        </link>

        <!-- 31 mm -->
        <joint name="joint_tool" type="fixed">
            <parent link="link_drillbit" />
            <child link="link_tool" />
            <origin xyz="0 0 0.031" rpy="0 0 0" />
        </joint>

        <link name="link_tool">
        <!-- tip stub -->
        </link>

        <xacro:lbr_gazebo robot_name="${robot_name}" />
        <!-- TODO: move modes to args, decouple urdf/gazebo/controls -->
        <xacro:lbr_system_interface
            A1_position_limit="${A1_position_limit * PI / 180}"
            A2_position_limit="${A2_position_limit * PI / 180}"
            A3_position_limit="${A3_position_limit * PI / 180}"
            A4_position_limit="${A4_position_limit * PI / 180}"
            A5_position_limit="${A5_position_limit * PI / 180}"
            A6_position_limit="${A6_position_limit * PI / 180}"
            A7_position_limit="${A7_position_limit * PI / 180}"
            A1_velocity_limit="${A1_velocity_limit * PI / 180}"
            A2_velocity_limit="${A2_velocity_limit * PI / 180}"
            A3_velocity_limit="${A3_velocity_limit * PI / 180}"
            A4_velocity_limit="${A4_velocity_limit * PI / 180}"
            A5_velocity_limit="${A5_velocity_limit * PI / 180}"
            A6_velocity_limit="${A6_velocity_limit * PI / 180}"
            A7_velocity_limit="${A7_velocity_limit * PI / 180}"
            max_torque="${effort_limit}"
            sim="${sim}" remote_host="INADDR_ANY" port_id="${port_id}"
            initial_positions_file="${initial_positions_file}"/>

    </xacro:macro>
</robot>